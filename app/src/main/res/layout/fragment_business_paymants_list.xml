<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BusinessPaymantsListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/header_payment_background"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/payment_iv_back"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="0.7:0.8"
            app:layout_constraintHeight_percent="0.25"
            android:padding="10dp"
            android:src="@drawable/ic_back"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/colorWhite" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/payment_profile_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="0.5:0.4"
            app:layout_constraintHeight_percent="0.3"
            app:layout_constraintVertical_bias="0.4"
            android:src="@drawable/img"
            app:civ_border_width="2dp"
            app:civ_border_color="#fff"
            app:layout_constraintStart_toEndOf="@id/payment_iv_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="20dp"
            />
        <TextView
            android:id="@+id/payment_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/payment_profile_image"
            app:layout_constraintTop_toTopOf="@id/payment_profile_image"
            app:layout_constraintBottom_toBottomOf="@id/payment_profile_image"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.2"
            android:text="Mohamed Soliman"
            android:gravity="start"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/segoeuibold"/>
        <TextView
            android:id="@+id/payment_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/payment_profile_name"
            app:layout_constraintTop_toBottomOf="@id/payment_profile_name"
            app:layout_constraintVertical_bias="0.2"
            android:text="Mohamed_Soliman@Gmail"
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/segoeuibold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintHorizontal_bias="1"
            android:layout_margin="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Earning"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/segoeui"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1250"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/colorWhite"
                app:drawableStartCompat="@drawable/ic_dollar_sign"
                app:drawableTint="@color/colorWhite" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.travisit.travisitbusiness.vvm.adapter.LockableNestedScrollView
            android:id="@+id/businessPaymentScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            app:layout_constrainedHeight="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/payment_received_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Payments received"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:background="@color/colorWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <!--    set max item 3 then see more-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/payment_received_RV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintTop_toBottomOf="@id/payment_received_title"
                    app:layout_constraintBottom_toBottomOf="@id/payment_bookings_RV"
                    tools:listitem="@layout/payment_item"
                    android:layout_marginBottom="5dp"
                    app:layout_constrainedHeight="true"
                    tools:itemCount="3"/>
                <TextView
                    android:id="@+id/payment_received_see_more_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="See All"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorHeaderBlack"
                    android:alpha="0.759"
                    android:background="@color/colorWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/payment_received_RV"
                    app:layout_constraintBottom_toBottomOf="@id/payment_received_RV"/>
                <TextView
                    android:id="@+id/booking_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="Bookings"
                    android:gravity="start"
                    android:padding="5dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@+id/payment_received_see_more_tv"
                    android:background="@color/colorWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
                <!--    set max item 3 then see more-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/payment_bookings_RV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/booking_title"
                    tools:listitem="@layout/payment_item"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constrainedHeight="true"
                    tools:itemCount="2"/>
                <TextView
                    android:id="@+id/payment_bookings_see_more_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:text="See All"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorHeaderBlack"
                    android:alpha="0.759"
                    android:background="@color/colorWhite"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="@id/payment_bookings_RV"
                    app:layout_constraintTop_toBottomOf="@id/payment_bookings_RV"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.travisit.travisitbusiness.vvm.adapter.LockableNestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>